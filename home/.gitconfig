[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore
	editor = vim
	pager = cat
[alias]
	st = status
	ap = add -p
	ci = commit
	br = branch
	co = checkout
	df = diff
	pm = pull --rebase origin master
	pr = pull --rebase
[github]
	user = pcrglennon
	email = pcrglennon@gmail.com
[user]
	email = pcrglennon@gmail.com
	name = Peter Glennon
[color]
	ui = true
	diff = auto
	status = auto
	branch = auto
	ui = true
[format]
	pretty = %C(yellow)%h%Creset %s %C(blue)(%an, %cr)%Creset
[diff "ruby"]
	funcname = ^ *\\(\\(class\\|module\\|def\\) .*\\)
[push]
	default = current
[merge]
	tool = opendiff
